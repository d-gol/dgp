  path = "helm/mysql"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "7a5f558eebac83fe48b61eb8e76bfdd80b784b40e91f17fdd5ab14704d3ecad5"
    retries = 0
  }
}
